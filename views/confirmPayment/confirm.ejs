<!DOCTYPE html>
<html lang="uk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Підтвердження оплати</title>
    <link rel="stylesheet" href="css/confirm.css">
  </head>
  <body>
    <nav>
      <form action="/activeBooking" method="POST">
        <button type="submit" class="nav-item">Активні бронювання</button>
      </form>
      <form action="/confirmPayment" method="POST">
        <button type="submit" class="nav-item active">Підтвердження оплати</button>
      </form>
      <form action="/cancelRequests" method="POST">
        <button type="submit" class="nav-item">Запити на скасування</button>
      </form>
    </nav>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Клієнт</th>
          <th>Телефон</th>
          <th>Дата</th>
          <th>Час</th>
          <th>Номер</th>
          <th>Ночей</th>
          <th>Вартість</th>
          <th>Дії</th>
        </tr>
      </thead>
      <tbody>
        <% let count = 1; const today = new Date(); today.setHours(0,0,0,0); %>
        <% if (bookings && bookings.length > 0) { %>
          <% bookings.filter(function(book) {
            if (!book.date) return false;
            const [d, m, y] = book.date.split(":").map(Number);
            const bookingDate = new Date(y, m - 1, d);
            bookingDate.setHours(0,0,0,0);
            return bookingDate >= today;
          }).forEach(function(book) { %>
            <tr>
              <td><%= count %></td>
              <td><%= book.fullName %></td>
              <td><%= book.phoneNumber %></td>
              <td><%= (() => {
                const [day, month, year] = book.date.split(':').map(Number);
                return new Date(year, month - 1, day).toLocaleDateString('uk-UA', {day: '2-digit', month: '2-digit', year: 'numeric'});
              })() %></td>
              <td><%= book.time %></td>
              <td><%= book.classRoom %></td>
              <td><%= book.night %></td>
              <td><%= book.price %> грн</td>
              <td>
                <form action="/confirmBooking" method="POST" style="display:inline-block;">
                  <input type="hidden" name="userName" value="<%= book.userName %>">
                  <input type="hidden" name="date" value="<%= book.date %>">
                  <input type="hidden" name="time" value="<%= book.time %>">
                  <input type="hidden" name="beforeDate" value="<%= book.beforeDate %>">
                  <input type="hidden" name="classRoom" value="<%= book.classRoom %>">
                  <input type="hidden" name="night" value="<%= book.night %>">
                  <input type="hidden" name="price" value="<%= book.price %>">
                  <input type="hidden" name="phoneNumber" value="<%= book.phoneNumber %>">
                  <input type="hidden" name="fullName" value="<%= book.fullName %>">
                  <button type="submit">Підтвердити</button>
                </form>
                <form action="/declineBooking" method="POST" style="display:inline-block; margin-left:5px;">
                  <input type="hidden" name="userName" value="<%= book.userName %>">
                  <input type="hidden" name="fullName" value="<%= book.fullName %>">
                  <input type="hidden" name="classRoom" value="<%= book.classRoom %>">
                  <input type="text" name="adminComment" placeholder="Причина відмови" required style="width:110px;">
                  <button type="submit">Відхилити</button>
                </form>
              </td>
            </tr>
            <% count++; %>
          <% }); %>
        <% } else { %>
          <tr><td colspan="9">Немає активних заявок на бронювання</td></tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
